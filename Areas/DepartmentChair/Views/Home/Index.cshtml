@{
    ViewData["Title"] = "Department Chair Dashboard";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Applications for Review</h5>
                <p class="card-text">Evaluate pending applications.</p>
                <a asp-action="Applications" asp-controller="Home" asp-area="DepartmentChair" class="btn btn-primary">Review Applications</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Interview Management</h5>
                <p class="card-text">Schedule and manage interviews.</p>
                <a asp-action="ManageInterviews" asp-controller="Home" asp-area="DepartmentChair" class="btn btn-primary">Manage Interviews</a> 
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Decision History</h5>
                <p class="card-text">View past application decisions.</p>
                <a asp-action="DecisionHistory" asp-controller="Home" asp-area="DepartmentChair" class="btn btn-primary">View History</a>
            </div>
        </div>
    </div>
</div> 