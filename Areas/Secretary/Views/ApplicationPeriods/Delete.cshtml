@model GraduationAdmissionSystem.Models.ApplicationPeriod

@{
    ViewData["Title"] = "Delete Application Period";
}

<div class="container mt-4">
    <h3>Are you sure you want to delete this application period?</h3>
    <hr />

    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @ViewData["ErrorMessage"]
        </div>
    }

    <div>
        <h4>@Model.Name</h4>
        <dl class="row">
            <dt class="col-sm-3">Semester</dt>
            <dd class="col-sm-9">@Model.Semester</dd>
            <dt class="col-sm-3">Year</dt>
            <dd class="col-sm-9">@Model.Year</dd>
            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>
            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@(Model.IsOpen ? "Open" : "Closed")</dd>
        </dl>

        @if (ViewData["ErrorMessage"] == null) 
        {
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</button> |
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
            </form>
        }
        else
        {
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
        }
    </div>
</div> 