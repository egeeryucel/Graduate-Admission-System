@model GraduationAdmissionSystem.ViewModels.StudentApplicationItem



<form asp-action="SaveEducationalInformation" asp-controller="BulkApplication" asp-area="Agency" method="post" class="educational-information-form">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="TemporaryId" />
    <input type="hidden" asp-for="CurrentStep" />
    <input type="hidden" asp-for="StudentName" />
    <input type="hidden" asp-for="EducationalInformationData.Id" />
    <input type="hidden" asp-for="EducationalInformationData.ProgramSelectionId" />

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="card mb-4">
        <div class="card-header">
            <h4><i class="fas fa-graduation-cap me-2"></i>Educational Information for @Model.StudentName</h4>
        </div>
        <div class="card-body">
            <h5><i class="fas fa-info-circle me-2"></i>Additional Information</h5>
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="form-check">
                        <input asp-for="EducationalInformationData.IsBlueCardOwner" class="form-check-input" type="checkbox" />
                        <label asp-for="EducationalInformationData.IsBlueCardOwner" class="form-check-label fw-bold"></label>
                        <span asp-validation-for="EducationalInformationData.IsBlueCardOwner" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <h5><i class="fas fa-school me-2"></i>Secondary School Information</h5>
            <div class="row mt-3">
                <div class="col-md-6 mb-3">
                    <label asp-for="EducationalInformationData.SchoolName" class="form-label fw-bold"></label>
                    <input asp-for="EducationalInformationData.SchoolName" class="form-control" placeholder="Enter high school name" />
                    <span asp-validation-for="EducationalInformationData.SchoolName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EducationalInformationData.GraduationYear" class="form-label fw-bold"></label>
                    <input asp-for="EducationalInformationData.GraduationYear" class="form-control" type="number" min="1900" max="@DateTime.Now.Year + 5" step="1" placeholder="e.g., 2020" />
                    <span asp-validation-for="EducationalInformationData.GraduationYear" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                 <div class="col-md-6 mb-3">
                    <label asp-for="EducationalInformationData.Degree" class="form-label fw-bold"></label>
                    <select asp-for="EducationalInformationData.Degree" asp-items="ViewBag.DegreeOptions" class="form-select">
                        <option value="">Select Degree</option>
                    </select>
                    <span asp-validation-for="EducationalInformationData.Degree" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EducationalInformationData.Major" class="form-label fw-bold"></label>
                    <input asp-for="EducationalInformationData.Major" class="form-control" placeholder="Enter major/department" />
                    <span asp-validation-for="EducationalInformationData.Major" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="EducationalInformationData.GPA" class="form-label fw-bold"></label>
                    <input asp-for="EducationalInformationData.GPA" class="form-control" type="number" step="0.01" min="0" max="4.00" placeholder="e.g., 3.20" />
                    <span asp-validation-for="EducationalInformationData.GPA" class="text-danger"></span>
                    <small class="form-text text-muted">Use a period (.) for decimals. Max 4.00 (or equivalent in your system).</small>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EducationalInformationData.Country" class="form-label fw-bold">High School Graduation Country</label>
                    <select asp-for="EducationalInformationData.Country" class="form-select" asp-items="ViewBag.Countries">
                    </select>
                    <span asp-validation-for="EducationalInformationData.Country" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="EducationalInformationData.City" class="form-label fw-bold">High School City</label>
                    <input asp-for="EducationalInformationData.City" class="form-control" placeholder="Enter city of high school" />
                    <span asp-validation-for="EducationalInformationData.City" class="text-danger"></span>
                </div>
                 <div class="col-md-6 mb-3">
                    <label asp-for="EducationalInformationData.LanguageProficiency" class="form-label fw-bold"></label>
                    <select asp-for="EducationalInformationData.LanguageProficiency" class="form-select" asp-items="ViewBag.LanguageProficiencies">
                    </select>
                    <span asp-validation-for="EducationalInformationData.LanguageProficiency" class="text-danger"></span>
                </div>
            </div>
             <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="EducationalInformationData.LanguageExamScore" class="form-label fw-bold"></label>
                    <input asp-for="EducationalInformationData.LanguageExamScore" class="form-control" type="number" step="0.01" min="0" max="100.00" placeholder="e.g., 95.00 (if applicable)" />
                    <span asp-validation-for="EducationalInformationData.LanguageExamScore" class="text-danger"></span>
                    <small class="form-text text-muted">Enter your language exam score (if applicable). Max 100.</small>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-4 mb-3">
        <button type="button" class="btn btn-outline-secondary btn-lg" onclick="goBackToStep(2, '@Model.TemporaryId')"><i class="fas fa-arrow-left me-2"></i>Previous (Personal Info)</button>
        <button type="submit" class="btn btn-primary btn-lg">Save Educational Info & Next <i class="fas fa-arrow-right ms-2"></i></button>
    </div>
</form>
