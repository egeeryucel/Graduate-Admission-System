@model GraduationAdmissionSystem.Models.ProgramSelection

@{
    ViewData["Title"] = "Application Submitted";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="progress mb-4">
                <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Application Submitted Successfully</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                    </div>

                    <div class="alert alert-warning mb-4">
                        <h5>Please save your tracking number!</h5>
                        <p class="mb-0">Use this tracking number to check your application status.</p>
                    </div>

                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <h4 class="text-primary mb-3">Your Tracking Number</h4>
                            <h3 class="border border-primary rounded p-3 d-inline-block tracking-number">@ViewBag.TrackingNumber</h3>
                            <p class="mt-3">
                                <button class="btn btn-outline-primary" onclick="copyTrackingNumber()">
                                    <i class="fas fa-copy"></i> Copy to Clipboard
                                </button>
                            </p>
                        </div>
                    </div>

                    <p>Your application has been successfully submitted. Our admission team will review your application and contact you if additional information is needed.</p>
                    
                    <h5>Next Steps:</h5>
                    <ol>
                        <li>Save or write down your tracking number</li>
                        <li>Check your email regularly for updates</li>
                        <li>You can track your application status using the tracking number</li>
                    </ol>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-home"></i> Return to Home
                        </a>
                        <a href="@Url.Action("ProgramSelection", "Application")" class="btn btn-primary">
                            <i class="fas fa-file"></i> Start a New Application
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyTrackingNumber() {
            const trackingNumber = '@ViewBag.TrackingNumber';
            navigator.clipboard.writeText(trackingNumber).then(() => {
                alert('Tracking number copied to clipboard!');
            }).catch(err => {
                console.error('Failed to copy: ', err);
            });
        }
    </script>
} 